get-view "Project Explorer" | get-tree | select "RobotProject/TestFile.robot" | double-click

//add one line with space
with [get-editor "TestFile.robot"] {
    get-tab-folder | get-tab-item Settings | click
    get-link "Section is not yet defined, do you want to create it?" | click
    with [get-section General | get-editbox $doc_editbox_selector] {
	        click
	        set-focus
	        type-text a
	        key-type Enter
	        type-text " "
	        key-type Enter
	        type-text b
	        key-type Enter
	        type-text "c\\ "
	        key-type "M1+s"
    }
}

//check text in box (the space after "c" is not visible by rcppp because focus is missing during validation)
get-editor "TestFile.robot" | get-section General | get-editbox $doc_editbox_selector | get-property text | equals "a\n \nb\n"
    + "c\\" | verify-true

//set focus on red.xml    
get-view "Project Explorer" | get-tree | select "RobotProject/red.xml"
get-editor "TestFile.robot" | get-section General | get-editbox $doc_editbox_selector | get-property text | equals "a\n \nb\n"
    + "c\\" | verify-true

// set text to see that space is visibe 
with [get-editor "TestFile.robot" | get-section General | get-editbox $doc_editbox_selector] {
	//this is workaround to click on window
	click
	set-focus
	//this is because setting caret selects entire raw
	set-text-offset 0 0
    set-text-offset 3 3
    type-text after
}
//check text
get-editor "TestFile.robot" | get-section General | get-editbox $doc_editbox_selector | get-property text | equals "a\n \nb\n"
    + "c\\ after" | verify-true
    
//add 3 enters and save    
with [get-editor "TestFile.robot" | get-section General | get-editbox $doc_editbox_selector] {
	click
	set-focus
	set-text-offset 0 0
    set-text-offset 8 3
    key-type "NUMPAD_ENTER" "\\u000D" -times 3
    key-type "M1+s"
}

//check text (enters are not visible during validation)
get-editor "TestFile.robot" | get-section General | get-editbox $doc_editbox_selector | get-property text | equals "a\n \nb\n"
    + "c\\ after" | verify-true
    
//but add new char    
with [get-editor "TestFile.robot" | get-section General | get-editbox $doc_editbox_selector] {
	click
	set-focus
	set-text-offset 0 0
    set-text-offset 0 6
    type-text d
    key-type "M1+s"
}

//check tha those new line are in text box
get-editor "TestFile.robot" | get-section General | get-editbox $doc_editbox_selector | get-property text | equals "a\n \nb\n"
    + "c\\ after\n\n\n"
    + "d" | verify-true
  
