proc "check-execution-tree" {

	with [get-view "Execution View"] {
    get-label "Passed: 3" | get-property caption | equals "Passed: 3" | verify-true
    get-label "Failed: 0" | get-property caption | equals "Failed: 0" | verify-true
    with [get-tree] {
        get-property itemCount | equals 1 | verify-true
        get-property "getItems().TreeItem[0].getItems().length" | equals 1 | verify-true
        get-property "getItems().TreeItem[0].getItems().TreeItem[0].getText()" | equals "All Pass Tests \(0\.0\d?\d? s\)" 
            | verify-true
        //pass cases are collpased    
        get-property "getItems().TreeItem[0].getItems().TreeItem[0].getExpanded()" | equals false | verify-true
        get-property "getItems().TreeItem[0].getText()" | equals "ExecutionViewProject \(0\.\d\d\d? s\)" | verify-true
    	}
	}
}

//run suit with all pass cases
get-tab-folder -index 4 | get-tab-item "Execution View" | click
with [get-view "Project Explorer" | get-tree] {
    select ExecutionViewProject | select ExecutionViewProject | double-click
    select "ExecutionViewProject/all_pass_tests.robot" | select "ExecutionViewProject/all_pass_tests.robot" 
        | get-menu "Run As/1 Robot Test" | click
} 
wait 1000
 //check result of tests   
check-execution-tree

//run only fail tests
get-view "Execution View" | get-button "Rerun Failed Tests Only" | click

//error is shown on console
get-view Console | get-text-viewer | get-property text 
    | matches "^Command: .*\nSuite Executor: Robot Framework .*\n" 
    + "\[ ERROR \] Collecting failed tests from '.*output.xml' failed: All tests passed.\n\n"+
    "Try --help for usage information\."| verify-true

//view is cleared
with [get-view "Execution View"] {
    get-label "Passed: 0" | get-property caption | equals "Passed: 0" | verify-true
    get-label "Failed: 0" | get-property caption | equals "Failed: 0" | verify-true
    get-tree | get-property itemCount | equals 0 | verify-true
}

//rerun test
get-view "Execution View" | get-button "Rerun Tests" | click
get-view Console | get-text-viewer | get-property text 
    | matches "^Command: .*\nSuite Executor: Robot Framework .*\n" 
    + "\[ ERROR \] Collecting failed tests from '.*output.xml' failed: All tests passed.\n\n"+
    "Try --help for usage information\."

//view is cleared
with [get-view "Execution View"] {
    get-label "Passed: 0" | get-property caption | equals "Passed: 0" | verify-true
    get-label "Failed: 0" | get-property caption | equals "Failed: 0" | verify-true
    get-tree | get-property itemCount | equals 0 | verify-true
}


